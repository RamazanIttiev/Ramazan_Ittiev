{
    "bracketSpacing": true,
    "jsxBracketSameLine": true,
    "printWidth": 120,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": true,
    "arrowParens": "avoid",
    "plugins": [
        "@trivago/prettier-plugin-sort-imports",
        "prettier-plugin-tailwindcss"
    ],
    "overrides": [
        {
            "files": [
                "*.json",
                "*.html"
            ],
            "options": {
                "useTabs": false,
                "tabWidth": 2
            }
        }
    ],
    "importOrder": [
        "react",
        "next",
        "<THIRD_PARTY_MODULES>",
        "^@",
        "^[./]",
        "^[../]"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": true
}
